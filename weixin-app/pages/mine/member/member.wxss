.questionnaire{
  width: 800rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
  height: 40rpx;
  line-height: 26rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 14px;
  text-align: left;
  font-family: PingFangSC-regular;
}

radio-group {
  height: 100rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
text{
  width: 500rpx;
  font-size: 28rpx;
  /* color: blue; */
}
label{
    margin-top: 42rpx;
    padding-left: 10rpx;
}
radio-group label {
  display: flex;
}
radio-group label view {
  margin-left: -10rpx; 
  align-self: center;
}
radio-group label:nth-child(1) {
  margin-right: 30rpx;
}
radio-group label:nth-child(2) {
  margin-right: 20rpx;
}
radio {
  transform: scale(0.6);
  align-self: center;
}


radio .wx-radio-input.wx-radio-input-checked {
  background: #ffffff !important;
  border-color:#5677FC !important;
  }
radio .wx-radio-input.wx-radio-input-checked::before {
  content: '';
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: blue;
  display: flex;
  justify-content: center;
  align-items: center;
} 

 .bottom{
   width: 100%;
   display: flex;
   justify-content: space-around;
   position: absolute;
   bottom: 63rpx;
 }
 .bottom view {
     width: 50%;
     height: 100rpx;
     line-height: 100rpx;
     text-align: center;
     color: white;
     background-color: rgb(69,164,249);
 }


.time{
  font-size: 26rpx;
}

.scrollView {
    height: calc(100vh - 360rpx);
}

.pages_box{
    width: 85%;
    margin: 20rpx auto;
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: flex-start;
    flex-wrap: nowrap;
  }
  .pages_box>view{
    line-height: 60rpx;
    font-size: 26rpx;
    border: 1px solid #A0A0A0;
    background-color: #F7F7F7;
    display: inline-block;
    padding: 0 25rpx;
    margin-left: 12rpx;
    color: #5f5f61;
    border-radius: 10rpx;
  }
  .pages_box>view.active{
    background-color: #b5b4b2;
    border-color: #6b6a69;
  }
  .pages_box>view:last-child,.pages_box>view:first-child{
    border-radius: 60rpx;
    padding: 0 30rpx;
  }