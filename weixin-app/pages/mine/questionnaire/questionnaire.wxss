/* pages/questionnaire/questionnaire.wxss */

.container-questionnaire{
  width: 100%;
  height: 100%;
}
.header{
  width: 750rpx;
  height: 40rpx;
  margin-top: 20rpx;
  display: flex;
}
.black{
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 26rpx;
  line-height: 26rpx;
  border-left: 8rpx solid;
  margin-left: 20rpx; 
}
.questionnaire{
  width: 100rpx;
  height: 40rpx;
  line-height: 26rpx;
  color: rgba(16, 16, 16, 100);
  font-size: 14px;
  text-align: left;
  font-family: PingFangSC-regular;
}
.box{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90%;
  /* border: 1rpx solid rgba(0, 0, 0, 0.4); */
  box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4);
  margin: 30rpx auto;
  padding: 1% 3%;
  box-sizing: border-box;
  border-radius: 30rpx;
  overflow: hidden;
  background-color: rgba(238, 226, 201, 100);
}
.box_top {
    width: 100%;
    padding-top: 15rpx;
}
.box .card{
    display: flex;
    justify-content: space-between;
    /* padding-left: 40rpx;
    padding-right: 30rpx; */
    width: 100%;
    /* width: 688rpx; */
    height: 80rpx;
    line-height: 80rpx;
    /* border-radius: 36rpx; */
    box-sizing: border-box;
    /* background-color: rgba(238, 226, 201, 100); */
    color: rgba(16, 16, 16, 100);
    font-size: 16px;
    text-align: center;
    /* box-shadow: 0px 4rpx 12rpx 0px rgba(0, 0, 0, 0.4); */
    font-family: Arial;
  }
.box_bottom {
    width: 100%;
    /* height: 200rpx; */
    /* background-color: pink; */
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.box_bottom .img {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    /* margin: 0 10rpx; */
    overflow: hidden;
}
.box_bottom .more {
    width: calc(100% - 350rpx);
    text-align: right;
    color: rgb(107, 107, 107);
    font-size: 14px;
}
.img image {
    width: 100%;
    height: 100%;
}

.footer {
    width: 100%;
    position: absolute;
    bottom: 80rpx;
}
.footer>button {
    width: 60%!important;
    background-color: rgba(238, 226, 201, 100);
    border: 1rpx solid #FAD563;
    color: #8A7E5C;
}
