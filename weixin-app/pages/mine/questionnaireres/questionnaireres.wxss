/* pages/questionnaireres/questionnaireres.wxss */
page{
  background-color: #CBE3F4;
  height: 100vh;
}
.container-questionnaireres {
    position: relative;
    height: 100vh;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.container-questionnaireres{
  width: 100%;
  height: 100%;
  background-color: #CBE3F4;
  position: relative;
}
.footer {
  width: 100%;
  position: absolute;
  bottom: 80rpx;
}
.footer>button {
  width: 60%!important;
  background-color: rgba(238, 226, 201, 100);
  border: 1rpx solid #FAD563;
  color: #8A7E5C;
}
.top{
  width: 652rpx;
  height: 1200rpx;
  background-color: #ffffff;
  overflow: hidden;
  position: absolute;
  left: 20rpx;
  top: 52rpx;
  border: 1px solid rgba(26, 22, 153, 100);
  box-sizing: border-box;
  z-index: 3;
}
.question{
width: 580rpx;
color: rgba(6, 46, 106, 100);
font-size: 15px;
text-align: left;
font-family: PingFangSC-regular;
padding-left: 36rpx;
margin-top: 40rpx;
word-wrap:break-word;
}

.answer{
  width: 550rpx;
  color: rgba(27, 26, 55, 100);
  font-size: 14px;
  text-align: left;
  font-family: PingFangSC-regular;
  padding-left: 66rpx;
  margin-top: 50rpx;
  /* padding-bottom: 50rpx; */
  word-wrap:break-word;
}
 .mid{
  width: 652rpx;
  height: 1186rpx;
  background-color: #ffffff;
  position: absolute;
  left: 50rpx;
  top:32rpx;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(4, 121, 204, 100);
  z-index: 2;
}
.under{
  width: 652rpx;
  height: 1178rpx;
  background-color: #ffffff;
  position: absolute;
  left: 80rpx;
  top:14rpx;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(6, 46, 106, 100);
  z-index: 1;
}
.btn {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 40rpx;
}