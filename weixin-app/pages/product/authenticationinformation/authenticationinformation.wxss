.title {
  margin: 10px 0;
  text-align: center;
}
.content_box {
  position: relative;
  width: 90%;
  box-sizing: border-box;
  /* padding: 5%; */
  margin: 20rpx auto;
  height: 82vh;
  background-color: #E8F2F9;
  font-size: 35rpx;
  /* line-height: 60rpx; */
  color: #6D6D6F;
  overflow: hidden;
}
.con_main {
  position: absolute;
  border: 1rpx solid #3727D7;
  padding: 4%;
  box-sizing: border-box;
  width: 92%;
  height: 92%;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.con_circle {
  position: absolute;
  box-sizing: border-box;
  width: 100rpx;
  height: 100rpx;
  border: 30rpx solid #E8F2F9;
  border-radius: 50%;
  background-color: #D99007;
}
.con_pargraph {
  text-indent: 2em;
}
.footer {
  width: 100%;
  margin-top: 30rpx;
  text-align: center;
  font-size: 36rpx;
  color: #6D6D6F;
}