/* pages/product/entfirm/loans/question/question.wxss */
.question_container {
    width: 90%;
    padding: 30rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    margin: 20rpx auto;
    background-color: #e4f7ff;
}
.form_item {
    width: 100%;
    margin-bottom: 45rpx;
    position: relative;
}
/* 避免radio被挤压 */
radio .wx-radio-input,
checkbox .wx-checkbox-input{
  flex: none;
}

.form_item>.item_number {
    position: absolute;
    width: 150rpx;
    height: 120rpx;
    line-height: 150rpx;
    text-align: center;
    color: #ffffff;
    top: -50rpx;
    left: -85rpx;
}
.form_item>image {
    width: 150rpx;
    height: 120rpx;
    position: absolute;
    top: 1%;
    left: -2%;
}
.form_item>.item_title {
    width: 95%;
    padding-left: 8%;
    padding-bottom: 10rpx;
    border-bottom: 2rpx solid rgb(255, 145, 0);
}
label {
    display: block;
    margin: 25rpx;
    font-size: 28rpx;
}
/* view {
    margin-bottom: 30rpx
} */
button {
    margin: 100rpx 0 50rpx 0;
    width: 80%!important;
    color: #ffffff;
    background: rgb(255, 145, 0);
    border-radius: 20rpx;
}
checkbox .wx-checkbox-input{
    flex: none;
}
