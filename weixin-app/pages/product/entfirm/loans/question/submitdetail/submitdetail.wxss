/* pages/product/entfirm/loans/question/submitdetail/submitdetail.wxss */
.submitdetail_container {
    background: -webkit-linear-gradient(top,#2a2396,rgb(107, 116, 245));
    padding-top: 30rpx;
    width:100%;
    height:100vh;
    background-repeat: no-repeat;
    padding-bottom: 10rpx;
}
.feedback {
    width: 85%;
    color: #ffffff;
    background-color: #3f51b5;
    margin: 0rpx auto;
    padding: 30rpx;
    line-height: 70rpx;
    box-sizing: border-box;
    box-shadow: 4rpx 4rpx 20rpx #3f51b5;
}
.iconshouzhi {
    font-size: 50rpx;
    color: #ffffff;
    position: absolute;
    top: 4%;
    left: 15%;
    transform: rotate(-95deg);
    color: orange;
}
.recommend {
    width: 90%;
    margin: auto;
    margin-top: 50rpx;
}
.recommend>.rec_title {
    font-size: 35rpx;
    color: #ffffff;
}
.rec_cocntent {
    padding-top: 50rpx;
}
.rec_scroll {
    width: 90%;
    padding: 0 3%;
    color: #ffffff;
    /* background-color: #fff; */
}
.rec_item {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 95%;
    margin: 30rpx 0;
    padding: 3% 5% 2% 5%;
    /* padding: 30rpx 10rpx 25rpx 20rpx; */
    /* border: 1rpx solid #A8A8A8; */
}
.rec_item>.item_title {
    padding: 20rpx 0 30rpx 30rpx;
    font-size: 35rpx;
}
.item_content {
    width: 100%;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}
.item_content>.item_img {
    width: 180rpx;
    height: 180rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    overflow: hidden;
}
.img {
    width: 100%;
    height: 100%;
}
.item_content>.item_text {
    width: calc(97% - 180rpx);
    padding-top: 10rpx;
    box-sizing: border-box;
    height: 150rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}